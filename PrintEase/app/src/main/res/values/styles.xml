<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ModernLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#334155</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="ModernEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/modern_edit_text_background</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ModernSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/modern_spinner_background</item>
    </style>

    <style name="ModernRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#334155</item>
    </style>

    <style name="ModernInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#334155</item>
    </style>
</resources>